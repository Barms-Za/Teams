{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/1.2.0/adaptive-card.json",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "${staticStrings.welcomeCardHeader}"
        },
        {
            "type": "TextBlock",
            "text": "${staticStrings.welcomeCardPersonalText1}",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "${staticStrings.welcomeCardPersonalText2}",
            "wrap": true
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "${staticStrings.welcomeCardViewConsultsButton}",
            "url": "${deepLink}"
        }
    ]
}